<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".HomepageActivity" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="true"
        android:fillViewport="true"
        android:padding="10sp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/hsvLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/iconGrid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                app:columnCount="3"
                app:rowCount="3">

                <ImageView
                    android:id="@+id/agenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="1"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:srcCompat="@drawable/agenda" />

                <ImageView
                    android:id="@+id/speakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="2"
                    app:layout_column="1"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="0"
                    app:srcCompat="@drawable/speakers" />

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="3"
                    app:layout_column="2"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="0"
                    app:srcCompat="@drawable/location" />

                <ImageView
                    android:id="@+id/driving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="4"
                    app:layout_column="0"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="1"
                    app:srcCompat="@drawable/driving" />

                <ImageView
                    android:id="@+id/resources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="5"
                    app:layout_column="1"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="1"
                    app:srcCompat="@drawable/resources" />

                <ImageView
                    android:id="@+id/videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="6"
                    app:layout_column="2"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="1"
                    app:srcCompat="@drawable/videos" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="7"
                    app:layout_column="0"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="2"
                    app:srcCompat="@drawable/products" />

                <ImageView
                    android:id="@+id/faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="8"
                    app:layout_column="1"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="2"
                    app:srcCompat="@drawable/faq" />

                <ImageView
                    android:id="@+id/lodging_complaint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="iconClicked"
                    android:padding="20sp"
                    android:tag="9"
                    app:layout_column="2"
                    app:layout_gravity="bottom|right|top|left"
                    app:layout_row="2"
                    app:srcCompat="@drawable/complaints" />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/refreshIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="25sp"
            android:onClick="refreshPage"
            android:padding="10sp"
            app:srcCompat="@drawable/refresh" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="3sp"
            android:onClick="iconClicked"
            android:tag="0"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/userNameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical|end"
            android:onClick="iconClicked"
            android:paddingEnd="30sp"
            android:paddingStart="5sp"
            android:tag="0"
            android:text="User"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/combined_logo" />

        <ImageView
            android:id="@+id/aeroIndiaLogo"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/aero_india_logo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>