<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".HomepageActivity" >

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/iconGrid"
        android:layout_width="410dp"
        android:layout_height="370dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="33dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aeroIndiaLogo"
        app:rowCount="3">

        <ImageView
            android:id="@+id/agenda"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:onClick="iconClicked"
            android:paddingLeft="33sp"
            android:paddingTop="5sp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/agenda" />

        <ImageView
            android:id="@+id/speakers"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:onClick="iconClicked"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/speakers" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="116dp"
            android:layout_height="105dp"
            android:onClick="iconClicked"
            android:paddingLeft="5sp"
            android:tag="2"
            app:layout_column="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/driving"
            android:layout_width="143dp"
            android:layout_height="134dp"
            android:onClick="iconClicked"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/driving_directions" />

        <ImageView
            android:id="@+id/resources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="iconClicked"
            android:paddingLeft="5sp"
            android:paddingTop="20sp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/resources" />

        <ImageView
            android:id="@+id/videos"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:onClick="iconClicked"
            android:paddingTop="20sp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/videos" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="139dp"
            android:layout_height="101dp"
            android:onClick="iconClicked"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/faq"
            android:layout_width="115dp"
            android:layout_height="106dp"
            android:onClick="iconClicked"
            android:paddingTop="10sp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/faq" />

        <ImageView
            android:id="@+id/complaint"
            android:layout_width="wrap_content"
            android:layout_height="127dp"
            android:onClick="iconClicked"
            android:paddingBottom="20sp"
            android:paddingTop="10sp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/complaint" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/aeroIndiaLogo"
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/iconGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/aero_india_logo" />

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/aeroIndiaLogo"
        app:layout_constraintEnd_toStartOf="@+id/userNameView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/userNameView"
        android:layout_width="259dp"
        android:layout_height="64dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="Username preview"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/aeroIndiaLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>